{
    "manifest_version": 3,
    "name": "AI Chrome Summarizer",
    "version": "1.0",
    "description": "Get instant summaries and suggestions from any web page using AI.",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["http://localhost:8080/"],
    "action": {
      "default_popup": "index.html",
      "default_icon": "icons/icon.png"
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }